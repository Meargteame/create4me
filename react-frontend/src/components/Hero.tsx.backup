import { motion } from 'framer-motion'
import { Link } from 'react-router-dom'
import { cn } from '../uti      />

      <div className="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-24 z-10">
        <div className="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
          {/* Content - Takes 5 columns (60% on large screens) */}
          <motion.div
            initial={{ opacity: 0, x: -50 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ duration: 0.8, ease: "easeOut" }}
            className="lg:col-span-7 space-y-8"
          >ort { useState, useEffect } from 'react'
import { HiUsers, HiChartBar, HiRocketLaunch } from 'react-icons/hi2'

// Floating Particle Component - BIGGER & MORE DYNAMIC
const FloatingParticle = ({ delay = 0, duration = 20, size = 4 }: { delay?: number; duration?: number; size?: number }) => (
  <motion.div
    className="absolute rounded-full bg-blue-500/30 dark:bg-blue-400/30 shadow-2xl shadow-blue-500/50"
    style={{
      width: size,
      height: size,
      left: `${Math.random() * 100}%`,
      top: `${Math.random() * 100}%`,
    }}
    animate={{
      y: [0, -80, 0],
      x: [0, Math.random() * 60 - 30, 0],
      opacity: [0.3, 0.8, 0.3],
      scale: [1, 1.5, 1],
    }}
    transition={{
      duration,
      repeat: Infinity,
      delay,
      ease: "easeInOut"
    }}
  />
)

// Spark Effect Component - BIGGER & BRIGHTER
const Spark = ({ delay = 0 }: { delay?: number }) => (
  <motion.div
    className="absolute w-2 h-2 bg-yellow-400 rounded-full shadow-lg shadow-yellow-500/50"
    initial={{ opacity: 0, scale: 0 }}
    animate={{
      opacity: [0, 1, 0],
      scale: [0, 2, 0],
      x: [0, Math.random() * 200 - 100],
      y: [0, Math.random() * 200 - 100],
    }}
    transition={{
      duration: 3,
      repeat: Infinity,
      delay,
      ease: "easeOut"
    }}
  />
)

export default function Hero() {
  const [mousePosition, setMousePosition] = useState({ x: 0, y: 0 })

  useEffect(() => {
    const handleMouseMove = (e: MouseEvent) => {
      setMousePosition({ x: e.clientX, y: e.clientY })
    }
    window.addEventListener('mousemove', handleMouseMove)
    return () => window.removeEventListener('mousemove', handleMouseMove)
  }, [])

  return (
    <section className="relative min-h-screen overflow-hidden bg-slate-50 dark:bg-gray-950">
      {/* Animated Grid Background */}
      <div className="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_60%,transparent_100%)]" />
      
      {/* Floating Particles - INCREASED SIZE & COUNT */}
      <div className="absolute inset-0 overflow-hidden">
        {[...Array(50)].map((_, i) => (
          <FloatingParticle key={i} delay={i * 0.15} duration={12 + Math.random() * 8} size={4 + Math.random() * 12} />
        ))}
      </div>

      {/* Sparks - MORE & BRIGHTER */}
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        {[...Array(40)].map((_, i) => (
          <Spark key={i} delay={i * 0.3} />
        ))}
      </div>

      {/* Mouse Follow Light Effect - BIGGER & BRIGHTER */}
      <motion.div
        className="absolute w-[600px] h-[600px] rounded-full bg-blue-500/20 dark:bg-blue-400/20 blur-[120px] pointer-events-none"
        animate={{
          x: mousePosition.x - 300,
          y: mousePosition.y - 300,
        }}
        transition={{ type: "spring", damping: 25, stiffness: 150 }}
      />
      
      {/* Additional Ambient Lights */}
      <motion.div
        className="absolute top-20 left-20 w-[400px] h-[400px] rounded-full bg-purple-500/15 dark:bg-purple-400/15 blur-[100px] pointer-events-none"
        animate={{
          scale: [1, 1.2, 1],
          opacity: [0.3, 0.5, 0.3],
        }}
        transition={{ duration: 8, repeat: Infinity }}
      />
      <motion.div
        className="absolute bottom-20 right-20 w-[400px] h-[400px] rounded-full bg-pink-500/15 dark:bg-pink-400/15 blur-[100px] pointer-events-none"
        animate={{
          scale: [1, 1.3, 1],
          opacity: [0.3, 0.6, 0.3],
        }}
        transition={{ duration: 10, repeat: Infinity, delay: 2 }}
      />

      <div className="relative h-full max-w-[1800px] mx-auto px-4 sm:px-6 lg:px-8 flex items-center z-10">
        <div className="flex flex-col lg:flex-row gap-8 lg:gap-12 items-center lg:items-center h-full">
          {/* Content */}
          <motion.div
            initial={{ opacity: 0, x: -50 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ duration: 0.8, ease: "easeOut" }}
            className="space-y-6 flex-shrink-0 lg:max-w-xl"
          >
            {/* Premium Badge - BIGGER & MORE GLASS */}
            <motion.div
              initial={{ opacity: 0, y: -20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.2 }}
              className={cn(
                'inline-flex items-center gap-4',
                'px-7 py-4 rounded-full',
                'bg-white/70 dark:bg-gray-900/70',
                'backdrop-blur-3xl',
                'border-2 border-white/60 dark:border-gray-700/60',
                'shadow-2xl shadow-blue-500/30',
                'text-base font-bold'
              )}
            >
              <motion.span 
                animate={{ rotate: [0, 360] }}
                transition={{ duration: 3, repeat: Infinity, ease: "linear" }}
                className="text-yellow-500 text-2xl"
              >
                ★
              </motion.span>
              <span className="text-gray-900 dark:text-white">Ethiopia's Premier Creator Platform</span>
              <motion.div
                animate={{ scale: [1, 1.4, 1] }}
                transition={{ duration: 2, repeat: Infinity }}
                className="w-3 h-3 rounded-full bg-green-500 shadow-lg shadow-green-500/50"
              />
            </motion.div>

            {/* Premium Headline */}
            <motion.h1
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.3 }}
              className="text-5xl sm:text-6xl lg:text-7xl font-bold leading-[1.1] text-gray-900 dark:text-white"
            >
              Connect with
              <br />
              <span className="relative inline-block mt-2">
                <span className="text-blue-600 dark:text-blue-500">Top Creators</span>
                <motion.div
                  className="absolute -bottom-2 left-0 right-0 h-3 bg-blue-500/20 dark:bg-blue-400/20 rounded-full"
                  initial={{ scaleX: 0 }}
                  animate={{ scaleX: 1 }}
                  transition={{ delay: 0.8, duration: 0.6 }}
                />
              </span>
            </motion.h1>

            {/* Premium Description */}
            <motion.p
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.4 }}
              className="text-xl text-gray-600 dark:text-gray-400 leading-relaxed"
            >
              Launch authentic campaigns with verified Ethiopian influencers.
              Track performance in real-time with our premium analytics dashboard.
            </motion.p>

            {/* Single CTA Button - REMOVED WATCH DEMO */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.5 }}
            >
              <Link to="/creators" className="inline-block">
                <motion.button
                  whileHover={{ scale: 1.02, y: -2 }}
                  whileTap={{ scale: 0.98 }}
                  className={cn(
                    'relative overflow-hidden',
                    'bg-blue-600 dark:bg-blue-500',
                    'text-white font-semibold text-lg',
                    'px-8 py-3 rounded-2xl',
                    'shadow-2xl shadow-blue-500/50',
                    'transition-all duration-300',
                    'flex items-center justify-center gap-3'
                  )}
                >
                  <span className="relative z-10">Start Campaign</span>
                  <motion.svg 
                    className="w-5 h-5 relative z-10" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                    animate={{ x: [0, 5, 0] }}
                    transition={{ duration: 1.5, repeat: Infinity }}
                  >
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </motion.svg>
                  
                  {/* Shine Effect */}
                  <motion.div
                    className="absolute inset-0 bg-white/20"
                    initial={{ x: '-100%', skewX: -20 }}
                    animate={{ x: '200%' }}
                    transition={{ duration: 2, repeat: Infinity, repeatDelay: 1 }}
                  />
                </motion.button>
              </Link>
            </motion.div>
          </motion.div>

          {/* Premium Dashboard Preview - Right Side (40% width) */}
          <motion.div
            initial={{ opacity: 0, x: 50, scale: 0.95 }}
            animate={{ opacity: 1, x: 0, scale: 1 }}
            transition={{ duration: 1, delay: 0.4 }}
            className="lg:col-span-5"
          >
            {/* Glassmorphic Dashboard Container */}
            <div className={cn(
              'relative',
              'bg-white/50 dark:bg-gray-900/50',
              'backdrop-blur-[40px]',
              'rounded-3xl',
              'p-6',
              'border-2 border-white/60 dark:border-gray-700/60',
              'shadow-[0_20px_60px_-15px_rgba(0,0,0,0.3)]',
              'ring-2 ring-white/20 dark:ring-gray-800/20',
              'w-full'
            )}>
              {/* Dashboard Header */}
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.6 }}
                className="flex items-center justify-between mb-6"
              >
                <div className="flex items-center gap-3">
                  <div className="flex gap-2">
                    <div className="w-3 h-3 rounded-full bg-red-500" />
                    <div className="w-3 h-3 rounded-full bg-yellow-500" />
                    <div className="w-3 h-3 rounded-full bg-green-500" />
                  </div>
                  <div className="text-sm font-semibold text-gray-700 dark:text-gray-300">Analytics Dashboard</div>
                </div>
              </motion.div>

              {/* Dashboard Content - Key Metrics (Standard SaaS) */}
              <div className="space-y-4">
                {[
                  { label: 'Total Reach', value: '1.2M', change: '+12.5%', color: 'blue', Icon: HiUsers },
                  { label: 'Engagement Rate', value: '8.4%', change: '+2.1%', color: 'green', Icon: HiChartBar },
                  { label: 'Active Campaigns', value: '24', change: '+4', color: 'purple', Icon: HiRocketLaunch }
                ].map((stat, i) => (
                  <motion.div
                    key={stat.label}
                    initial={{ opacity: 0, x: 20 }}
                    animate={{ opacity: 1, x: 0 }}
                    transition={{ delay: 0.7 + i * 0.1 }}
                    className={cn(
                      'p-4 rounded-xl',
                      'bg-white/80 dark:bg-gray-800/80',
                      'backdrop-blur-xl',
                      'border border-gray-200/50 dark:border-gray-700/50',
                      'transition-all duration-300'
                    )}
                  >
                    <div className="flex items-center justify-between">
                      <div className="flex items-center gap-3">
                        <div 
                          className={cn(
                            'p-2.5 rounded-lg',
                            stat.color === 'blue' && 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400',
                            stat.color === 'green' && 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400',
                            stat.color === 'purple' && 'bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400'
                          )}
                        >
                          <stat.Icon className="w-5 h-5" />
                        </div>
                        <div>
                          <div className="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">{stat.label}</div>
                          <div className="text-2xl font-bold text-gray-900 dark:text-white">
                            {stat.value}
                          </div>
                        </div>
                      </div>
                      <div
                        className={cn(
                          'px-2 py-1 rounded-lg text-xs font-semibold',
                          stat.color === 'blue' && 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400',
                          stat.color === 'green' && 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400',
                          stat.color === 'purple' && 'bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400'
                        )}
                      >
                        {stat.change}
                      </div>
                    </div>
                  </motion.div>
                ))}
              </div>

              {/* Simple Chart Visualization */}
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 1 }}
                className={cn(
                  'mt-6 p-4 rounded-xl',
                  'bg-white/80 dark:bg-gray-800/80',
                  'backdrop-blur-xl',
                  'border border-gray-200/50 dark:border-gray-700/50'
                )}
              >
                <div className="flex items-center justify-between mb-4">
                  <div>
                    <div className="text-sm font-semibold text-gray-900 dark:text-white">Campaign Performance</div>
                    <div className="text-xs text-gray-500 dark:text-gray-400">Last 7 days</div>
                  </div>
                  <div className="px-2 py-1 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 text-xs font-semibold">
                    ↗ +24%
                  </div>
                </div>
                <div className="flex items-end justify-between h-20 gap-1.5">
                  {[40, 60, 45, 75, 55, 85, 70].map((height, i) => (
                    <motion.div
                      key={i}
                      initial={{ height: 0 }}
                      animate={{ height: `${height}%` }}
                      transition={{ delay: 1.2 + i * 0.08, duration: 0.5 }}
                      className={cn(
                        'flex-1 rounded-t-md',
                        i === 5 ? 'bg-blue-500' : 'bg-blue-300 dark:bg-blue-400/40'
                      )}
                    />
                  ))}
                </div>
                <div className="flex justify-between mt-2 text-[10px] text-gray-500 dark:text-gray-400">
                  {['M', 'T', 'W', 'T', 'F', 'S', 'S'].map((day, i) => (
                    <div key={i}>{day}</div>
                  ))}
                </div>
              </motion.div>
            </div>

            {/* Floating Elements Around Dashboard - SMALLER */}
            <motion.div
              animate={{ y: [0, -12, 0], rotate: [0, 8, 0] }}
              transition={{ duration: 4, repeat: Infinity }}
              className="absolute -top-4 -right-4 w-16 h-16 bg-blue-500/30 dark:bg-blue-400/30 rounded-2xl backdrop-blur-2xl border-2 border-blue-500/40 shadow-xl shadow-blue-500/30"
            />
            <motion.div
              animate={{ y: [0, 12, 0], rotate: [0, -8, 0] }}
              transition={{ duration: 5, repeat: Infinity, delay: 0.5 }}
              className="absolute -bottom-4 -left-4 w-14 h-14 bg-purple-500/30 dark:bg-purple-400/30 rounded-2xl backdrop-blur-2xl border-2 border-purple-500/40 shadow-xl shadow-purple-500/30"
            />
          </motion.div>
        </div>
      </div>
    </section>
  )
}