{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon\\.(ico|png|svg)", "dest": "/favicon.$1" },
    { "src": "/robots\\.txt", "dest": "/robots.txt" },
    { "src": "/[^.]*", "dest": "/index.html" }
  ]
}
