class ApiClient {
  private getAuthHeaders() {
    const token = localStorage.getItem('auth_token');
    return {
      'Content-Type': 'application/json',
      ...(token && { Authorization: `Bearer ${token}` }),
    };
  }

  private async request(endpoint: string, options: RequestInit = {}) {
    const url = `${API_BASE}${endpoint}`;
    const config = {
      headers: this.getAuthHeaders(),
      ...options,
    };

    try {
      const response = await fetch(url, config);
      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Request failed');
      }

      return data;
    } catch (error) {
      console.error('API request failed:', error);
      throw error;
    }
  }

  // Auth endpoints
  async signup(email: string, password: string, role?: string) {
    return this.request('/auth/signup', {
      method: 'POST',
      body: JSON.stringify({ email, password, role }),
    });
  }

  async login(email: string, password: string) {
    return this.request('/auth/login', {
      method: 'POST',
      body: JSON.stringify({ email, password }),
    });
  }

  async getMe() {
    return this.request('/auth/me');
  }

  // Project endpoints
  async createProject(title: string, description?: string) {
    return this.request('/projects', {
      method: 'POST',
      body: JSON.stringify({ title, description }),
    });
  }

  async getProjects() {
    return this.request('/projects');
  }

  async getProject(id: string) {
    return this.request(`/projects/${id}`);
  }

  async updateProject(id: string, updates: { title?: string; description?: string }) {
    return this.request(`/projects/${id}`, {
      method: 'PUT',
      body: JSON.stringify(updates),
    });
  }

  async deleteProject(id: string) {
    return this.request(`/projects/${id}`, {
      method: 'DELETE',
    });
  }

  // Page endpoints
  async createPage(projectId: string, name: string, structureJson?: any) {
    return this.request(`/projects/${projectId}/pages`, {
      method: 'POST',
      body: JSON.stringify({ name, structureJson }),
    });
  }

  async getPages(projectId: string) {
    return this.request(`/projects/${projectId}/pages`);
  }

  async getPage(id: string) {
    return this.request(`/pages/${id}`);
  }

  async updatePage(id: string, updates: { name?: string; structureJson?: any }) {
    return this.request(`/pages/${id}`, {
      method: 'PUT',
      body: JSON.stringify(updates),
    });
  }

  async deletePage(id: string) {
    return this.request(`/pages/${id}`, {
      method: 'DELETE',
    });
  }

  async publishPage(id: string) {
    return this.request(`/pages/${id}/publish`, {
      method: 'POST',
    });
  }

  // AI endpoints
  async generateContent(prompt: string, type?: string) {
    return this.request('/ai/generate', {
      method: 'POST',
      body: JSON.stringify({ prompt, type }),
    });
  }

  async getSuggestions(pageStructure: any, targetAudience?: string) {
    return this.request('/ai/suggest', {
      method: 'POST',
      body: JSON.stringify({ pageStructure, targetAudience }),
    });
  }

  async optimizeContent(content: any, metrics?: any) {
    return this.request('/ai/optimize', {
      method: 'POST',
      body: JSON.stringify({ content, metrics }),
    });
  }
}

export const apiClient = new ApiClient();
export default apiClient;
